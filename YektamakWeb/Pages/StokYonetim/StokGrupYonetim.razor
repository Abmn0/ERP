@page "/stok-gruplar"
@inherits AuthorizedPageBase

@inject IStokGrupService StokGrupService
@inject NavigationManager Navigation

<h3>Stok Grupları Yönetimi</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa erişimi kontrol ediliyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else
{
    <EditForm Model="@stokGrupModel" OnValidSubmit="@OnSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="row mb-3">
            <div class="col-md-4">
                <label>Kod</label>
                <InputText class="form-control" @bind-Value="stokGrupModel.Kod" />
            </div>
            <div class="col-md-4">
                <label>Ad</label>
                <InputText class="form-control" @bind-Value="stokGrupModel.Ad" />
            </div>
        </div>

        <button class="btn btn-success" type="submit">@((stokGrupModel.Id == 0) ? "Ekle" : "Güncelle")</button>
        @if (stokGrupModel.Id != 0)
        {
            <button class="btn btn-secondary ms-2" type="button" @onclick="Temizle">İptal</button>
        }
    </EditForm>

    <hr />

    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Kod</th>
                <th>Ad</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grup in stokGruplar)
            {
                <tr>
                    <td>@grup.Kod</td>
                    <td>@grup.Ad</td>
                    <td>
                        <button class="btn btn-sm btn-primary me-2" @onclick="@(() => Duzenle(grup))">Düzenle</button>
                        <button class="btn btn-sm btn-danger" @onclick="@(() => Sil(grup.Id))">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <button class="btn btn-outline-dark" @onclick="GeriDon">← Geri</button>
}

@code {
    private List<StokGrup> stokGruplar = new();
    private StokGrup stokGrupModel = new();

    protected override string GercekSayfaYolu => "/stok-gruplar";

    protected override async Task OnSayfaYuklendi()
    {
        await Yukle();
    }

    private async Task Yukle()
    {
        stokGruplar = await StokGrupService.GetAllAsync();
    }

    private async Task OnSubmit()
    {
        if (stokGrupModel.Id == 0)
        {
            await StokGrupService.AddAsync(stokGrupModel);
        }
        else
        {
            await StokGrupService.UpdateAsync(stokGrupModel);
        }

        await Yukle();
        Temizle();
    }

    private void Duzenle(StokGrup grup)
    {
        stokGrupModel = new StokGrup
            {
                Id = grup.Id,
                Kod = grup.Kod,
                Ad = grup.Ad
            };
    }

    private async Task Sil(int id)
    {
        await StokGrupService.DeleteAsync(id);
        await Yukle();
    }

    private void Temizle()
    {
        stokGrupModel = new StokGrup();
    }

    private void GeriDon()
    {
        Navigation.NavigateTo("/stok-kart-araclari");
    }
}
