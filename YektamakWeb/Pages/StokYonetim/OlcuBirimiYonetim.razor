@page "/olcu-birimler"
@inherits AuthorizedPageBase

@inject IOlcuBirimService OlcuBirimService
@inject NavigationManager Navigation

<h3>Ölçü Birim Yönetimi</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa erişimi kontrol ediliyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else
{
    <EditForm Model="@seciliBirim" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="row mb-3">
            <div class="col-md-4">
                <label>Kod</label>
                <InputText class="form-control" @bind-Value="seciliBirim.Kod" />
            </div>
            <div class="col-md-4">
                <label>Ad</label>
                <InputText class="form-control" @bind-Value="seciliBirim.Ad" />
            </div>
            <div class="col-md-4">
                <label>Tanım</label>
                <InputText class="form-control" @bind-Value="seciliBirim.Tanim" />
            </div>
        </div>

        <button class="btn btn-success" type="submit">@(seciliBirim.Id == 0 ? "Ekle" : "Güncelle")</button>
        <button class="btn btn-secondary ms-2" type="button" @onclick="Temizle">Temizle</button>
    </EditForm>

    <hr />

    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Kod</th>
                <th>Ad</th>
                <th>Tanım</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in olcuBirimler)
            {
                <tr>
                    <td>@item.Kod</td>
                    <td>@item.Ad</td>
                    <td>@item.Tanim</td>
                    <td>
                        <button class="btn btn-sm btn-primary me-1" @onclick="@(() => Duzenle(item))">Düzenle</button>
                        <button class="btn btn-sm btn-danger" @onclick="@(() => Sil(item.Id))">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-outline-dark" @onclick="GeriDon">← Geri</button>
}

@code {
    private List<OlcuBirim> olcuBirimler = new();
    private OlcuBirim seciliBirim = new();

    protected override string GercekSayfaYolu => "/olcu-birimler";

    protected override async Task OnSayfaYuklendi()
    {
        await Yukle();
    }

    private async Task Yukle()
    {
        olcuBirimler = await OlcuBirimService.GetAllAsync();
    }

    private async Task HandleSubmit()
    {
        if (seciliBirim.Id == 0)
        {
            await OlcuBirimService.AddAsync(seciliBirim);
        }
        else
        {
            await OlcuBirimService.UpdateAsync(seciliBirim);
        }

        await Yukle();
        Temizle();
    }

    private void Duzenle(OlcuBirim birim)
    {
        seciliBirim = new OlcuBirim
            {
                Id = birim.Id,
                Kod = birim.Kod,
                Ad = birim.Ad,
                Tanim = birim.Tanim
            };
    }

    private async Task Sil(int id)
    {
        await OlcuBirimService.DeleteAsync(id);
        await Yukle();
    }

    private void Temizle()
    {
        seciliBirim = new();
    }

    private void GeriDon()
    {
        Navigation.NavigateTo("/stok-kart-araclari");
    }
}
