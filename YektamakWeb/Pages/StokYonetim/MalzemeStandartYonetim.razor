@page "/malzeme-standartlar"
@inherits AuthorizedPageBase

@inject IMalzemeStandartService MalzemeStandartService
@inject NavigationManager Navigation

<h3>Malzeme Standartları Yönetimi</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa erişimi kontrol ediliyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else
{
    <EditForm Model="@model" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="row mb-3">
            <div class="col-md-3">
                <label>Kod</label>
                <InputText class="form-control" @bind-Value="model.Kod" />
            </div>
            <div class="col-md-3">
                <label>Ad</label>
                <InputText class="form-control" @bind-Value="model.Ad" />
            </div>
            <div class="col-md-6">
                <label>Standart Adı</label>
                <InputText class="form-control" @bind-Value="model.StandartAdi" />
            </div>
        </div>

        <button type="submit" class="btn btn-success">@((model.Id == 0) ? "Ekle" : "Güncelle")</button>
        @if (model.Id != 0)
        {
            <button type="button" class="btn btn-secondary ms-2" @onclick="Temizle">İptal</button>
        }
    </EditForm>

    <hr />

    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Kod</th>
                <th>Ad</th>
                <th>Standart Adı</th>
                <th style="width: 150px">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in liste)
            {
                <tr>
                    <td>@item.Kod</td>
                    <td>@item.Ad</td>
                    <td>@item.StandartAdi</td>
                    <td>
                        <button class="btn btn-sm btn-primary me-2" @onclick="() => Duzenle(item)">Düzenle</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Sil(item.Id)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <button class="btn btn-outline-dark" @onclick="GeriDon">← Geri</button>
}

@code {
    private MalzemeStandart model = new();
    private List<MalzemeStandart> liste = new();

    protected override string GercekSayfaYolu => "/malzeme-standartlar";

    protected override async Task OnSayfaYuklendi()
    {
        await Yukle();
    }

    private async Task Yukle()
    {
        liste = await MalzemeStandartService.GetAllAsync();
    }

    private async Task HandleSubmit()
    {
        if (model.Id == 0)
            await MalzemeStandartService.AddAsync(model);
        else
            await MalzemeStandartService.UpdateAsync(model);

        await Yukle();
        Temizle();
    }

    private void Duzenle(MalzemeStandart item)
    {
        model = new MalzemeStandart
            {
                Id = item.Id,
                Kod = item.Kod,
                Ad = item.Ad,
                StandartAdi = item.StandartAdi
            };
    }

    private async Task Sil(int id)
    {
        await MalzemeStandartService.DeleteAsync(id);
        await Yukle();
    }

    private void Temizle()
    {
        model = new MalzemeStandart();
    }

    private void GeriDon()
    {
        Navigation.NavigateTo("/stok-kart-araclari");
    }
}
