@page "/stok-tipler"
@inherits AuthorizedPageBase

@inject IStokTipService StokTipService
@inject NavigationManager Navigation

<h3>Stok Tipleri Yönetimi</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa erişimi kontrol ediliyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else
{
    <EditForm Model="@stokTipModel" OnValidSubmit="@OnSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="row mb-3">
            <div class="col-md-4">
                <label>Kod</label>
                <InputText class="form-control" @bind-Value="stokTipModel.Kod" />
            </div>
            <div class="col-md-4">
                <label>Ad</label>
                <InputText class="form-control" @bind-Value="stokTipModel.Ad" />
            </div>
        </div>

        <button class="btn btn-success" type="submit">@((stokTipModel.Id == 0) ? "Ekle" : "Güncelle")</button>
        @if (stokTipModel.Id != 0)
        {
            <button class="btn btn-secondary ms-2" type="button" @onclick="Temizle">İptal</button>
        }
    </EditForm>

    <hr />

    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Kod</th>
                <th>Ad</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tip in stokTipler)
            {
                <tr>
                    <td>@tip.Kod</td>
                    <td>@tip.Ad</td>
                    <td>
                        <button class="btn btn-sm btn-primary me-2" @onclick="@(() => Duzenle(tip))">Düzenle</button>
                        <button class="btn btn-sm btn-danger" @onclick="@(() => Sil(tip.Id))">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <button class="btn btn-outline-dark" @onclick="GeriDon">← Geri</button>
}

@code {
    private List<StokTip> stokTipler = new();
    private StokTip stokTipModel = new();

    protected override string GercekSayfaYolu => "/stok-tipler";

    protected override async Task OnSayfaYuklendi()
    {
        await Yukle();
    }

    private async Task Yukle()
    {
        stokTipler = await StokTipService.GetAllAsync();
    }

    private async Task OnSubmit()
    {
        if (stokTipModel.Id == 0)
        {
            await StokTipService.AddAsync(stokTipModel);
        }
        else
        {
            await StokTipService.UpdateAsync(stokTipModel);
        }

        await Yukle();
        Temizle();
    }

    private void Duzenle(StokTip tip)
    {
        stokTipModel = new StokTip
            {
                Id = tip.Id,
                Kod = tip.Kod,
                Ad = tip.Ad
            };
    }

    private async Task Sil(int id)
    {
        await StokTipService.DeleteAsync(id);
        await Yukle();
    }

    private void Temizle()
    {
        stokTipModel = new StokTip();
    }

    private void GeriDon()
    {
        Navigation.NavigateTo("/stok-kart-araclari");
    }
}
