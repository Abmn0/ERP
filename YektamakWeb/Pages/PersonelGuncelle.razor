@page "/personel-guncelle/{id:int}"
@inherits AuthorizedPageBase

@inject IPersonelService PersonelService
@inject IFirmaService FirmaService
@inject IPozisyonService PozisyonService
@inject NavigationManager Navigation

<h3>Personel Güncelle</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa erişimi kontrol ediliyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else if (personel is null || firmalar is null || pozisyonlar is null || tumPersoneller is null)
{
    <p>Yükleniyor...</p>
}
else
{
    <EditForm Model="personel" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label>Ad</label>
            <InputText class="form-control" @bind-Value="personel.PersonelAd" />
        </div>

        <div class="mb-3">
            <label>Soyad</label>
            <InputText class="form-control" @bind-Value="personel.PersonelSoyad" />
        </div>

        <div class="mb-3">
            <label>Telefon</label>
            <InputText class="form-control" @bind-Value="personel.Telefon" />
        </div>

        <div class="mb-3">
            <label>Mail</label>
            <InputText class="form-control" @bind-Value="personel.Mail" />
        </div>

        <div class="mb-3">
            <label>Firma</label>
            <InputSelect class="form-select" @bind-Value="personel.FirmaId">
                <option value="">Seçiniz</option>
                @foreach (var f in firmalar)
                {
                    <option value="@f.Id">@f.Ad</option>
                }
            </InputSelect>
        </div>

        <div class="mb-3">
            <label>Pozisyon</label>
            <InputSelect class="form-select" @bind-Value="personel.PozisyonId">
                <option value="">Seçiniz</option>
                @foreach (var p in pozisyonlar)
                {
                    <option value="@p.Id">@p.Ad</option>
                }
            </InputSelect>
        </div>

        <div class="mb-3">
            <label>Yönetici Personel</label>
            <InputSelect class="form-select" @bind-Value="personel.YoneticiPersonelId">
                <option value="">Seçiniz</option>
                @foreach (var yonetici in tumPersoneller.Where(x => x.Id != personel.Id))
                {
                    <option value="@yonetici.Id">@yonetici.PersonelAd @yonetici.PersonelSoyad</option>
                }
            </InputSelect>
        </div>

        <button class="btn btn-primary" type="submit">Güncelle</button>
    </EditForm>
}

@code {
    [Parameter] public int id { get; set; }

    private Personel? personel;
    private List<Firma> firmalar = new();
    private List<Pozisyon> pozisyonlar = new();
    private List<Personel> tumPersoneller = new();

    protected override string GercekSayfaYolu => "/personel-guncelle";

    protected override async Task OnSayfaYuklendi()
    {
        personel = await PersonelService.GetByIdAsync(id);
        firmalar = await FirmaService.GetAllAsync();
        pozisyonlar = await PozisyonService.GetAllAsync();
        tumPersoneller = await PersonelService.GetAllAsync();
    }

    private async Task HandleValidSubmit()
    {
        await PersonelService.UpdateAsync(personel!);
        Navigation.NavigateTo("/personeller");
    }
}
