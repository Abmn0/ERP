@page "/kullanicilar"
@inherits YektamakWeb.Shared.AuthorizedPageBase

@inject IKullaniciService KullaniciService
@inject NavigationManager Navigation
@using Utilities.Interfaces
@inject IPasswordService PasswordService

<h3>Kullanıcı Listesi</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Yükleniyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else if (kullanicilar == null)
{
    <p>Yükleniyor...</p>
}
else if (kullanicilar.Count == 0)
{
    <p>Hiç kullanıcı bulunamadı.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Kod</th>
                <th>Rol</th>
                <th>Personel</th>
                <th>Şifre Değişti mi?</th>
                <th>Oluşturulma Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var k in kullanicilar)
            {
                <tr>
                    <td>@k.Ad</td>
                    <td>@k.Kod</td>
                    <td>@k.Rol?.Ad</td>
                    <td>@(k.Personel?.PersonelAd + " " + k.Personel?.PersonelSoyad)</td>
                    <td>@(k.IsSifreDegisti == true ? "Evet" : "Hayır")</td>
                    <td>@k.CreationTime.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2" @onclick="@(() => Guncelle(k.Id))">Güncelle</button>
                        <button class="btn btn-sm btn-danger" @onclick="@(() => Sil(k.Id))">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Kullanici>? kullanicilar;

    protected override string GercekSayfaYolu => "/kullanicilar";

    protected override async Task OnSayfaYuklendi()
    {
        kullanicilar = await KullaniciService.GetAllAsync();
    }

    private async Task Sil(int id)
    {
        await KullaniciService.DeleteAsync(id);
        kullanicilar = await KullaniciService.GetAllAsync();
    }

    private void Guncelle(int id)
    {
        Navigation.NavigateTo($"/kullanici-guncelle/{id}");
    }
}
