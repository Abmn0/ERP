@page "/firma-guncelle/{id:int}"
@inherits AuthorizedPageBase

@inject IFirmaService FirmaService
@inject NavigationManager Navigation

<h3>Firma Güncelle</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa erişimi kontrol ediliyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else if (firma is null)
{
    <p>Yükleniyor...</p>
}
else
{
    <EditForm Model="firma" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Ad</label>
            <InputText class="form-control" @bind-Value="firma.Ad" />
        </div>

        <div class="mb-3">
            <label class="form-label">Kod</label>
            <InputText class="form-control" @bind-Value="firma.Kod" />
        </div>

        <div class="mb-3">
            <label class="form-label">Telefon</label>
            <InputText class="form-control" @bind-Value="firma.Telefon" />
        </div>

        <div class="mb-3">
            <label class="form-label">Mail</label>
            <InputText class="form-control" @bind-Value="firma.Mail" />
        </div>

        <button class="btn btn-primary" type="submit">Kaydet</button>
    </EditForm>
}

@code {
    [Parameter] public int id { get; set; }
    private Firma? firma;

    protected override string GercekSayfaYolu => "/firma-guncelle";

    protected override async Task OnSayfaYuklendi()
    {
        firma = await FirmaService.GetByIdAsync(id);
    }

    private async Task HandleValidSubmit()
    {
        await FirmaService.UpdateAsync(firma!);
        Navigation.NavigateTo("/firmalar");
    }
}
