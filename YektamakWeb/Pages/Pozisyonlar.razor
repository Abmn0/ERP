@page "/pozisyonlar"
@inherits AuthorizedPageBase

@inject IPozisyonService PozisyonService
@inject NavigationManager Navigation

<h3>Pozisyon Listesi</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa erişimi kontrol ediliyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else if (pozisyonlar is null)
{
    <p>Yükleniyor...</p>
}
else
{
    <button class="btn btn-success mb-3" @onclick="PozisyonEkle">Yeni Pozisyon Ekle</button>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Kod</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pozisyon in pozisyonlar)
            {
                <tr>
                    <td>@pozisyon.Ad</td>
                    <td>@pozisyon.Kod</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2" @onclick="@(() => Guncelle(pozisyon.Id))">Güncelle</button>
                        <button class="btn btn-sm btn-danger" @onclick="@(() => Sil(pozisyon.Id))">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Pozisyon>? pozisyonlar;

    protected override string GercekSayfaYolu => "/pozisyonlar";

    protected override async Task OnSayfaYuklendi()
    {
        pozisyonlar = await PozisyonService.GetAllAsync();
    }

    private async Task Sil(int id)
    {
        await PozisyonService.DeleteAsync(id);
        pozisyonlar = await PozisyonService.GetAllAsync(); // Listeyi yeniden yükle
    }

    private void Guncelle(int id)
    {
        Navigation.NavigateTo($"/pozisyon-guncelle/{id}");
    }

    private void PozisyonEkle()
    {
        Navigation.NavigateTo("/pozisyon-ekle");
    }
}
