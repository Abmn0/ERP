@page "/firmalar"
@inherits AuthorizedPageBase

@inject IFirmaService FirmaService
@inject NavigationManager Navigation

<h3>Firmalar</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa erişimi kontrol ediliyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else if (firmalar is null)
{
    <p>Yükleniyor...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Kod</th>
                <th>Telefon</th>
                <th>Mail</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var firma in firmalar)
            {
                <tr>
                    <td>@firma.Ad</td>
                    <td>@firma.Kod</td>
                    <td>@firma.Telefon</td>
                    <td>@firma.Mail</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2" @onclick="@(() => Guncelle(firma.Id))">Güncelle</button>
                        <button class="btn btn-sm btn-danger" @onclick="@(() => Sil(firma.Id))">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Firma>? firmalar;

    protected override string GercekSayfaYolu => "/firmalar";

    protected override async Task OnSayfaYuklendi()
    {
        firmalar = await FirmaService.GetAllAsync();
    }

    private async Task Sil(int id)
    {
        await FirmaService.DeleteAsync(id);
        firmalar = await FirmaService.GetAllAsync(); // Listeyi güncelle
    }

    private void Guncelle(int id)
    {
        Navigation.NavigateTo($"/firma-guncelle/{id}");
    }
}
