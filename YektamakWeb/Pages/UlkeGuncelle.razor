@page "/ulke-guncelle/{Id:int}"
@inherits AuthorizedPageBase

@inject IUlkeService UlkeService
@inject NavigationManager Navigation

<h3>Ülke Güncelle</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa erişimi kontrol ediliyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else if (ulke is null)
{
    <p>Yükleniyor...</p>
}
else
{
    <EditForm Model="@ulke" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label>Ad:</label>
            <InputText class="form-control" @bind-Value="ulke.Ad" />
        </div>

        <div class="mb-3">
            <label>Kod:</label>
            <InputText class="form-control" @bind-Value="ulke.Kod" />
        </div>

        <button type="submit" class="btn btn-success">Güncelle</button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="Iptal">İptal</button>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private Ulke? ulke;

    protected override string GercekSayfaYolu => "/ulke-guncelle";

    protected override async Task OnSayfaYuklendi()
    {
        ulke = await UlkeService.GetByIdAsync(Id);
    }

    private async Task HandleValidSubmit()
    {
        if (ulke is not null)
        {
            await UlkeService.UpdateAsync(ulke);
            Navigation.NavigateTo("/ulkeler");
        }
    }

    private void Iptal()
    {
        Navigation.NavigateTo("/ulkeler");
    }
}
