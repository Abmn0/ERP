@page "/proje-takvim"
@inherits YektamakWeb.Shared.AuthorizedPageBase
@inject IProjeTakvimService ProjeTakvimService
@inject NavigationManager Navigation

@using Models
@using ApiService.Interfaces

<h3>Proje Takvimleri</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa yükleniyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else if (takvimler is null)
{
    <p>Yükleniyor...</p>
}
else
{
    <button class="btn btn-success mb-3" @onclick="YeniTakvimEkle">Yeni Takvim Ekle</button>

    @if (takvimler.Count == 0)
    {
        <p>Hiç kayıt bulunamadı.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Proje</th>
                    <th>Süreç</th>
                    <th>Plan. Baş.</th>
                    <th>Plan. Bitiş</th>
                    <th>Gerç. Baş.</th>
                    <th>Gerç. Bitiş</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in takvimler)
                {
                    <tr>
                        <td>@t.Proje?.Ad</td>
                        <td>@t.ProjeSurec?.Ad</td>
                        <td>@t.PlanlananBaslangicTarihi?.ToShortDateString()</td>
                        <td>@t.PlanlananBitisTarihi?.ToShortDateString()</td>
                        <td>@t.GerceklesenBaslangicTarihi?.ToShortDateString()</td>
                        <td>@t.GerceklesenBitisTarihi?.ToShortDateString()</td>
                        <td>
                            <button class="btn btn-sm btn-primary me-2" @onclick="() => Guncelle(t.ProjeTakvimId)">Güncelle</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => Sil(t.ProjeTakvimId)">Sil</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    private List<ProjeTakvim> takvimler = new();

    protected override string GercekSayfaYolu => "/proje-takvim";

    protected override async Task OnSayfaYuklendi()
    {
        takvimler = await ProjeTakvimService.GetAllAsync();
    }

    private void YeniTakvimEkle()
    {
        Navigation.NavigateTo("/proje-takvim-ekle");
    }

    private void Guncelle(int id)
    {
        Navigation.NavigateTo($"/proje-takvim-guncelle/{id}");
    }

    private async Task Sil(int id)
    {
        await ProjeTakvimService.DeleteAsync(id);
        takvimler = await ProjeTakvimService.GetAllAsync(); // Listeyi yenile
    }
}
