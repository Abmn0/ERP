@page "/projeler"
@inherits YektamakWeb.Shared.AuthorizedPageBase

@inject IProjeService ProjeService
@inject NavigationManager Navigation

<h3>Projeler</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa yükleniyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else
{
    <button class="btn btn-success mb-3" @onclick="YeniProjeEkle">+ Yeni Proje Ekle</button>

    @if (projeler == null)
    {
        <p>Yükleniyor...</p>
    }
    else if (projeler.Count == 0)
    {
        <p>Hiç proje bulunamadı.</p>
    }
    else
    {
        @if (!string.IsNullOrWhiteSpace(hataMesaji))
        {
            <div class="alert alert-danger">@hataMesaji</div>
        }
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Kod</th>
                    <th>Ad</th>
                    <th>Proje Tipi</th>
                    <th>Marka</th>
                    <th>Alt Grup</th>
                    <th>Kategori</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var proje in projeler)
                {
                    <tr>
                        <td>@proje.Kod</td>
                        <td>@proje.Ad</td>
                        <td>@proje.ProjeTip?.ProjeTipAd</td>
                        <td>@proje.Marka?.Ad</td>
                        <td>@proje.AltGrup?.Ad</td>
                        <td>@proje.Kategori?.Ad</td>
                        <td>@proje.Aciklama</td>
                        <td>
                            <button class="btn btn-sm btn-primary me-2" @onclick="() => Guncelle(proje.Id)">Güncelle</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => Sil(proje.Id)">Sil</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    private List<Proje>? projeler;

    protected override string GercekSayfaYolu => "/projeler";

    protected override async Task OnSayfaYuklendi()
    {
        projeler = await ProjeService.GetAllAsync();
    }

    private void YeniProjeEkle()
    {
        Navigation.NavigateTo("/proje-ekle");
    }

    private void Guncelle(int id)
    {
        Navigation.NavigateTo($"/proje-guncelle/{id}");
    }

    private string? hataMesaji;

    private async Task Sil(int id)
    {
        try
        {
            await ProjeService.DeleteAsync(id);
            projeler = await ProjeService.GetAllAsync();
        }
        catch (InvalidOperationException ex)
        {
            hataMesaji = ex.Message;
        }
    }

}
