@page "/ulkeler"
@inherits AuthorizedPageBase

@inject IUlkeService UlkeService
@inject NavigationManager Navigation

<h3>Ülke Listesi</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa erişimi kontrol ediliyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else if (ulkeler is null)
{
    <p>Yükleniyor...</p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="YeniEkle">Yeni Ülke Ekle</button>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Kod</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ulke in ulkeler)
            {
                <tr>
                    <td>@ulke.Ad</td>
                    <td>@ulke.Kod</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2" @onclick="@(() => Guncelle(ulke.Id))">Güncelle</button>
                        <button class="btn btn-sm btn-danger" @onclick="@(() => Sil(ulke.Id))">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Ulke>? ulkeler;

    protected override string GercekSayfaYolu => "/ulkeler";

    protected override async Task OnSayfaYuklendi()
    {
        ulkeler = await UlkeService.GetAllAsync();
    }

    private async Task Sil(int id)
    {
        await UlkeService.DeleteAsync(id);
        ulkeler = await UlkeService.GetAllAsync();
    }

    private void Guncelle(int id)
    {
        Navigation.NavigateTo($"/ulke-guncelle/{id}");
    }

    private void YeniEkle()
    {
        Navigation.NavigateTo("/ulke-ekle");
    }
}
