@page "/ulke-ekle"
@inherits AuthorizedPageBase

@inject IUlkeService UlkeService
@inject NavigationManager Navigation

<h3>Ülke Ekle</h3>

@if (!ErisimKontrolEdildi)
{
    <p>Sayfa erişimi kontrol ediliyor...</p>
}
else if (!ErisimVar)
{
    <p class="text-danger">Bu sayfaya erişim yetkiniz yok.</p>
}
else
{
    <EditForm Model="@yeniUlke" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label>Ad:</label>
            <InputText class="form-control" @bind-Value="yeniUlke.Ad" />
        </div>

        <div class="mb-3">
            <label>Kod:</label>
            <InputText class="form-control" @bind-Value="yeniUlke.Kod" />
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="Iptal">İptal</button>
    </EditForm>
}

@code {
    private Ulke yeniUlke = new();

    protected override string GercekSayfaYolu => "/ulke-ekle";

    protected override Task OnSayfaYuklendi()
    {
        return Task.CompletedTask;
    }

    private async Task HandleValidSubmit()
    {
        await UlkeService.AddAsync(yeniUlke);
        Navigation.NavigateTo("/ulkeler");
    }

    private void Iptal()
    {
        Navigation.NavigateTo("/ulkeler");
    }
}
